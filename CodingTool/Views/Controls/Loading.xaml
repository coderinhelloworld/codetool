<UserControl x:Class="CodingTool.Views.Controls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingTool.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10" Width="120">
            <TextBlock Text="Loading" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,25"/>
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="80" IsIndeterminate="True" />
            <Button Margin="10" Content="Close" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"  Style="{DynamicResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
